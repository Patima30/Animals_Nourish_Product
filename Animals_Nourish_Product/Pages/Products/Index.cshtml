@page
@model Animals_Nourish_Product.Pages.Products.IndexModel

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="~/css/Product_Index.css" />

<center>
    <h1>Animals Nourish Products</h1>

</center>

<form method="get" asp-page="Index" class="horizontal-form">
    <div class="form-row d-flex justify-content-center">
        <div class="form-group col-md-3">
            <label for="foodType">Food Type</label>
            <select class="form-control" id="foodType" name="foodType" asp-for="FoodType">
                <option value="">All</option>
                <option value="Veterinary Diets">Veterinary Diets</option>
                <option value="Wet Food">Wet Food</option>
                <option value="Dry Food">Dry Food</option>
            </select>
        </div>
        <div class="form-group col-md-3">
            <label for="animalType">Animal Type</label>
            <select class="form-control" id="animalType" name="animalType" asp-for="AnimalType">
                <option value="">All</option>
                <option value="Cat">Cat</option>
                <option value="Dog">Dog</option>
            </select>
        </div>
        <div class="form-group col-md-2">
            <label for="minPriceProduct">Min Price</label>
            <input type="number" class="form-control" id="minPriceProduct" name="minPriceProduct" asp-for="MinPriceProduct">
        </div>
        <div class="form-group col-md-2">
            <label for="maxPriceProduct">Max Price</label>
            <input type="number" class="form-control" id="maxPriceProduct" name="maxPriceProduct" asp-for="MaxPriceProduct">
        </div>
        <div class="form-group col-md-2">
            <label>&nbsp;</label>
            <button type="submit" class="btn btn-primary btn-block">Search</button>
        </div>
    </div>
</form>


<br />
<br />


<div class="row">
    @if (Model.Product != null)
    {
        @foreach (var item in Model.Product)
        {
            <div class="product">
                <a class="img-wrapper" href="#">
                    <img src="~/images/@item.Image_Product" alt="@item.Name_Product" />
                </a>
                <div class="info">
                    <div class="title">
                        @Html.DisplayFor(modelItem => item.Name_Product)
                    </div>
                    <div class="price">
                        $@Html.DisplayFor(modelItem => item.Price_Product)
                    </div>
                </div>
                <div class="actions-wrapper">
                    <a href="#" class="add-btn wishlist">Wishlist</a>
                    <a href="#" class="add-btn cart">Cart</a>
                </div>
            </div>
         }
    }
</div>